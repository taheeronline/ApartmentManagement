@page "/flats/{ApartmentId:int}"
@using ApartmentManagement.Application.DTOs
@inject ApartmentManagement.Application.Services.FlatService FlatService

<h3>List of Flats</h3>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body bg-light">
                    <h4 class="card-title mb-4 text-center">
                        Add Flat
                    </h4>

                    @if (!string.IsNullOrWhiteSpace(errorMessage))
                    {
                        <div class="alert alert-danger">
                            @errorMessage
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            Flat Number
                        </label>
                        <input class="form-control"
                               placeholder="e.g. A-101"
                               @bind="flatNumber" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            Floor
                        </label>
                        <input class="form-control"
                               type="number"
                               placeholder="e.g. 1"
                               @bind="floor" />
                    </div>

                    <div class="d-grid">
                        <button class="btn btn-primary"
                                @onclick="AddFlat">
                            Add Flat
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (flats == null)
{
    <p>Loading...</p>
}
else if (!flats.Any())
{
    <p>No flats found.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Flat Number</th>
                <th>Floor</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flat in flats)
            {
                <tr>
                    <td>@flat.FlatNumber</td>
                    <td>@flat.Floor</td>
                    <td>
                        <button class="btn btn-danger btn-sm"
                                @onclick="() => DeleteFlat(flat.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public int ApartmentId { get; set; }

    private IReadOnlyList<FlatDto>? flats;

    private string flatNumber = string.Empty;
    private int floor;

    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadFlats();
    }

    private async Task LoadFlats()
    {
        try
        {
            errorMessage = null;
            flats = await FlatService.GetFlatsByApartmentAsync(ApartmentId);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private async Task AddFlat()
    {
        try
        {
            errorMessage = null;

            await FlatService.AddFlatAsync(flatNumber, floor, ApartmentId);

            flatNumber = string.Empty;
            floor = 0;

            await LoadFlats();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }

    private async Task DeleteFlat(int id)
    {
        try
        {
            errorMessage = null;

            await FlatService.DeleteFlatAsync(id);
            await LoadFlats();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }
}
